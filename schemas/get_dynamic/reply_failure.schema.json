{
  "description": "Reply for when hardware data request fails.",
  "properties": {
    "version": {
      "pattern": "^\\d+\\.\\d+\\.\\d$",
      "title": "Version",
      "type": "string"
    },
    "status": {
      "const": "failure",
      "title": "Status",
      "type": "string"
    },
    "payload": {
      "properties": {
        "error_msg": {
          "description": "A descriptive error message to be passed on to the user.",
          "title": "Error Msg",
          "type": "string"
        }
      },
      "required": [
        "error_msg"
      ],
      "title": "QuantumHardwareFailureData",
      "type": "object"
    }
  },
  "required": [
    "version",
    "status"
  ],
  "title": "Hardware data failure",
  "type": "object"
}
